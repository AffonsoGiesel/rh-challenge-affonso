<p id="notice"><%= notice %></p>

<h1>Job Roles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_roles.each do |job_role| %>
      <tr>
        <td><%= job_role.title %></td>
        <td><%= link_to 'Show', job_role %></td>
        <td><%= link_to 'Edit', edit_job_role_path(job_role) %></td>
        <td><%= link_to 'Destroy', job_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

